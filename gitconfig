[alias]
	# From https://ttboj.wordpress.com/2015/03/16/fancy-git-aliases-and-git-cherryfetch/
	cherryfetch = !git fetch "$1" "$2" && git cherry-pick HEAD..FETCH_HEAD && true
	lol = log --graph --decorate --pretty=oneline --abbrev-commit